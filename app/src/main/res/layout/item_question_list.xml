<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_item_question_list"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/cardview_shadow_start_color"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="Мова парканів"/>

        <TextView
            android:id="@+id/answers_item_question_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_item_question_list"
            android:padding="16dp"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="Українська      29%"/>

        <ImageView
            android:id="@+id/options_item_question_list"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/title_item_question_list"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/title_item_question_list"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_vert"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>